/* pages/private/private.wxss */
.person{
    margin-top: 4.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar-box{
    width: 5rem;
    height: 5rem;
    overflow: hidden;
    background: #ccc;
    border-radius: 50%;
}
.avatar-box image{
    width: 100%;
    height: auto;
}
.name{
    font-size: 1.5rem;
    line-height: 3rem;
}
.job{
    padding: 0.3rem 0.8rem;
    background: #F0C35D;
    border-radius: 1rem;
    color: white;
    font-size: 0.9rem;
}
.company{
    margin: 0.3rem 0;
    display: flex;
    align-items: center;
    height: 2rem;
}
.company-icon{
    width: 1.1rem;
}
.company-name{
    font-weight: 600;
}
.tips{
    font-size: 0.9rem;
    color: rgba(0,0,0, 0.5);
}
.button-box{
    display: flex;
    justify-content: center;
}
.link-btn{
    padding: 0.5rem 1.8rem;
    line-height: 1.3rem;
    margin: 1rem 0.3rem;
    color: white;
    border: 1px solid;
    font-size: 0.9rem;
}
.link-btn::after{
    border:none;
}
.mitline{
    width: 100%;
    height: 0.5rem;
    background: #F7F7F7;
}
.info-container{
    display: flex;
    padding: 1rem;
}
.title-box{
    margin-right: 1rem;
    color: rgba(0,0,0, 0.5);
}
.title-box .title{
    height: 2.5rem;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
}
.info-icon{
    width: 1.2rem;
    height: 1.2rem;
}
.info-box{
    color: black;
}
.info-tab{
    padding-right: 1rem; 
    height: 2.45rem;
    line-height: 2.5rem;
    border-bottom: 1px solid rgba(60,60,60, 0.1);
}
.with-link{
    background: url('../../img/icon-arrow.svg') no-repeat 90% 50%;
}